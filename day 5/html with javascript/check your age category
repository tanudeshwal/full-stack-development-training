<html>

<head>

    <script>
        // internal javascript
        function handleInput() {
            // here we take input from age input field by id
            let age = document.getElementById("age").value;

            // here find the age category based on the age input 
            let yourCategory = "";
            if (age < 18) {
                yourCategory = "You are a minor.";
            } else if (age >= 18 && age <= 40) {
                yourCategory = "You are an adult.";
            } else if (age > 40 && age <= 60) {
                yourCategory = "You are a middle-aged adult.";
            } else {
                yourCategory = "You are a senior citizen.";
            }

            // here we set the result in the p tag with id result
            document.getElementById("result").innerText = yourCategory;
        }
    </script>

</head>

<body>
    <h1>Age checker</h1>
    <label>Enter your age</label>
    <!-- age input field -->
    <input type="number" id="age" placeholder="Enter age">
    <button onclick="handleInput()">check</button>

    <!-- p tag field -->
    <p id="result"></p>
</body>


</html>